// Exemplo de função de carrinho de compras
document.addEventListener('DOMContentLoaded', () => {
    const cart = [];
    const addToCartButtons = document.querySelectorAll('.add-to-cart');
    const cartItemsContainer = document.getElementById('cart-items');
    const totalPriceElement = document.getElementById('total-price');

    addToCartButtons.forEach(button => {
        button.addEventListener('click', () => {
            const productElement = button.parentElement;
            const productName = productElement.querySelector('h4').textContent;
            const productPrice = productElement.querySelector('p').textContent;

            cart.push({ name: productName, price: parseFloat(productPrice.replace('R$', '')) });
            updateCart();
        });
    });

    function updateCart() {
        cartItemsContainer.innerHTML = '';
        let totalPrice = 0;

        cart.forEach(product => {
            const cartItem = document.createElement('div');
            cartItem.textContent = `${product.name} - R$ ${product.price.toFixed(2)}`;
            cartItemsContainer.appendChild(cartItem);

            totalPrice += product.price;
        });

        totalPriceElement.textContent = `R$ ${totalPrice.toFixed(2)}`;
    }
});